mixin button_custom(params={})
  //- 공통 요소 Start
  - const prefix = "mui"
  - const divide = '_'
  //- 공통 요소 End
  
  - const { element = "button", label, disabled, className, type, ...rest } = Object.assign({}, params)
  - const btnType = element === "button" ? element : null

  if type === 'download-32'
    #{element}(
      class=`${prefix}${divide}button_custom ${type}`
      class=className
      type=btnType
      disabled=disabled
    )
      span.inset!=label
  else if type === 'timeselect-24'
    #{element}(
      id=id
      class=`${prefix}${divide}button_custom ${type}`
      class=className
      type=btnType
      disabled=disabled
    )
      span.inset!=label
  else
    #{element}(
      id=id
      class=`${prefix}${divide}button_custom ${type}`
      class=className
      type=btnType
      disabled=disabled
    )
      span.inset!=label

